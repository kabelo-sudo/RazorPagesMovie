@page
@model Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Netflix-Style Hero Banner -->
<div class="hero">
    <h1 class="display-3 fw-bold">Welcome to RazorMovies</h1>
    <p class="lead">Browse movies just like Netflix.</p>
    <a class="btn btn-danger btn-lg" href="/Movies">Browse Movies</a>
</div>

<hr class="my-5" />

<h1>Latest Movies & TV Shows</h1>

<table class="table table-striped text-white">
    <thead>
        <tr>
            <th>Quality</th>
            <th>Title</th>
            <th>Year</th>
            <th>Duration</th>
            <th>Type</th>
            <th>Season</th>
            <th>Episode</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MediaItems)
        {
            <tr>
                <td>@item.Quality</td>
                <td>@item.Title</td>
                <td>@item.Year</td>
                <td>@item.Duration</td>
                <td>@item.Type</td>
                <td>@item.Season</td>
                <td>@item.Episode</td>
            </tr>
        }
    </tbody>
</table>
